<% include ../partials/header %>

<div class="container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Welcome to Games Yelp</h1>
            <p>View and rate the best games!</p>
            <p>
                <a class = "btn btn-primary btn-lg" href = "/games/new">Add New Game</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Most Popular Games</h3>
        </div>
    </div>

    <div class="row text-center">
        <% games.forEach(function(game){ %>
            <div class = "col-md-3 col-sm-6">
                <div class="card">
                    <img class = "card-img-top" src = "<%= game.image %>">
                    <h5 class = "card-title"> <%= game.name %> </h5>
                    <a href="/games/<%= game._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% }); %>
    </div>

    <a href = "/landing">Go Back Home</a>
</div>

<% include ../partials/footer %>