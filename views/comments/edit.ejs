<% include ../partials/header %>

<div class="container">
    <h1 style = "text-align: center;">Edit Your Comment</h1>
    <div class="row">
        <div style = "width: 30%; margin: 0 auto;">
            <form action = "/games/<%= game_id %>/comments/<%= comment._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class = "form-control" type = "text" name = "comment[text]" value = "<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class = "btn btn-lg btn-outline-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
        <a href = "/games">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>