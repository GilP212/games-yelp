<% include ../partials/header %>

<div class="container">
    <h1 style = "text-align: center;">Add Comment to "<%= game.name %>"</h1>

    <div class="row">
        <div style = "width: 30%; margin: 0 auto;">
            <form action = "/games/<%= game._id %>/comments" method = "POST">
                <div class="form-group">
                    <input class = "form-control" type = "text" name = "comment[text]" placeholder = "enter comment...">
                </div>
                <div class="form-group">
                    <button class = "btn btn-lg btn-outline-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
        <a href = "/games/<%= game._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>